{
  "expo": {
    "name": "HanMed 환자",
    "slug": "hanmed-patient",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "hanmed-patient",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#10B981"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hanmed.patient",
      "associatedDomains": [
        "applinks:patient.hanmed.co.kr",
        "applinks:*.hanmed.co.kr"
      ],
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "주변 한의원을 찾기 위해 위치 권한이 필요합니다.",
        "NSLocationAlwaysUsageDescription": "주변 한의원 알림을 위해 위치 권한이 필요합니다.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#10B981"
      },
      "package": "com.hanmed.patient",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "SCHEDULE_EXACT_ALARM"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "patient.hanmed.co.kr",
              "pathPrefix": "/record"
            },
            {
              "scheme": "https",
              "host": "patient.hanmed.co.kr",
              "pathPrefix": "/prescription"
            },
            {
              "scheme": "https",
              "host": "patient.hanmed.co.kr",
              "pathPrefix": "/download"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-device",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "주변 한의원을 찾기 위해 위치 권한이 필요합니다."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#10B981",
          "sounds": ["./assets/sounds/medication.wav"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
